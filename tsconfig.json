{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/api/*": ["./src/app/api/*"],
      "@/auth/*": ["./src/app/api/auth/[...nextauth]/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/utils/*": ["./src/lib/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/views/*": ["./src/views/*"],
      "@/types/*": ["./types/*"],
      "@/store/*": ["./src/lib/store/*"],
      "@/services/*": ["./src/services/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/context/*": ["./src/context/*"],
      "@/layouts/*": ["./src/layouts/*"],
      "@/mocks/*": ["./src/mocks/*"],
      "@/validations/*": ["./src/validations/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "curl",
    "src/components/molecules/main-sidebar/library"
  ],
  "exclude": ["node_modules"]
}
